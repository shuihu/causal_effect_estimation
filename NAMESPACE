useDynLib(causalTree, .registration = TRUE, .fixes = "C_")

export(na.causalTree, path.causalTree, prune.causalTree, causalTree, causalTree.control, rsq.causalTree, snip.causalTree, xpred.causalTree, 
       estimate.causalTree, causalForest, propensityForest)
